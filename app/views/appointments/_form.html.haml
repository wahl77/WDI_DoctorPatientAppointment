- doctors = Doctor.all.map { |doctor| [doctor.name, doctor.id.to_s] }
- patients = Patient.all.map { |patient| [patient.name, patient.id.to_s] }

= form_for (@appointment) do |f|
  = f.label :doctor
  = select_tag("appointment[doctor_id]", options_for_select(doctors))
  %br
  = f.label :patient
  = select_tag("appointment[patient_id]", options_for_select(patients))
  %br
  
  = f.label :start_time
  = f.datetime_select :start_time, :ampm => true, :minute_step => 15
  
  %br
  = f.label :end_time
  = f.datetime_select :end_time, :ampm => true, :minute_step => 15
  
  %br
  = f.submit
  
